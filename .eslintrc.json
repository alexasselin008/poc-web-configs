{
    "$schema": "https://json.schemastore.org/eslintrc",
    "root": true,
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "env": {
        "commonjs": true,
        "node": true
    },
    "overrides": [
        {
            "files": ["*.json"],
            "rules": {
                "indent": ["warn", 4]
            }
        }
    ]
}
